<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.appssb.avisos.UsuariosFragment">

    <TableRow android:background="#128675">
        <TextView
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRO DE USUARIOS"
            android:textColor="@color/colorWhite"/>
    </TableRow>

    <TableRow android:background="@color/colorPrimary">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="UID:"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_column="1"
            android:id="@+id/TextUid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

    </TableRow>

    <TableRow android:background="@color/colorPrimary">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Correo:"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_column="1"
            android:id="@+id/TextCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

    </TableRow>

    <TableRow android:background="@color/colorPrimary">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="ContraseÃ±a:"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_column="1"
            android:id="@+id/TextPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

    </TableRow>

    <TableRow android:background="@color/colorPrimary">
        <TextView
            android:layout_column="0"
            android:padding="3dip"
            android:text="Nombre:"
            android:textColor="@android:color/white" />

        <EditText
            android:layout_column="1"
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Ingrese el nombre" />

    </TableRow>

    <TableRow android:background="@color/colorPrimary">
        <TextView
        android:layout_column="0"
        android:padding="3dip"
        android:text="Tipo:"
        android:textColor="@android:color/white" />

        <Spinner
            android:layout_column="1"
            android:id="@+id/editTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:spinnerMode="dialog"/>
    </TableRow>

    <TableRow android:background="#128675">
        <TextView
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USUARIOS INGRESADOS"
            android:textColor="@color/colorWhite"/>
    </TableRow>


    <ListView
        android:id="@+id/listV_usuarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</TableLayout>
